<div class="well">
	<% if comment.user && comment.user.avatar.file? %>
		<div class="thumbnail pull-left comment-avatar">
			<%= image_tag comment.user.avatar.url(:thumb) %>
		</div>
	<% end %>
	<div class="">
		<p> Created at: <%= formatted_date comment.created_at %> </p>
		<p> <%= comment.body %> </p>
		 <% if @is_current_user_admin or (current_user && current_user.id == comment.user_id) %>  
			<div class="btn-group">
				<%= link_to "Edit Comment", edit_car_comment_path(@car, comment), class: "btn btn-small btn-warning" %>
				<%= link_to "Delete Comment", car_comment_path(@car, comment), method: :delete, class: "btn btn-small  btn-warning", confirm: "Are you sure you want to delete this comment" %>
			</div>
		<% end %>
	</div>
</div>