<div id='comment-<%= comment.id %>'>
	<p> Created at: <%= formatted_date comment.created_at %> </p>
	<p> <%= comment.body %> </p>
	<%# if current_user and comment.user.email=current_user.email %>
      <% if @is_current_user_admin or current_user.id == comment.user_id %>    
		<p> <%= link_to "Edit Comment", edit_car_comment_path(@car.id, comment) %>|
			<%= link_to "Delete Comment", car_comment_path(@car, comment), remote:true, method: :delete, confirm: "Are you sure you want to delete this comment" %></p>
	  <% end %>
	<%# end %>
</div>