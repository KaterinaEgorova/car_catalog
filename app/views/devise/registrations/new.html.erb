<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, html: {class: "well form-horizontal"}, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="control-group">
  <div class="controls">
    <% if f.object.avatar.file? %>
      <div class="thumbnail">
        <%= f.object.Ð°vatar.url(:thumb) %>
      </div>
    <% end %>
  </div></div>

	<div class="control-group"><%= f.label :avatar, class: "control-label" %>
  <div class="controls"><%= f.file_field :avatar %></div></div>

  <div class="control-group"><%= f.label :email, class: "control-label" %>
  <div class="controls"><%= f.email_field :email, :autofocus => true %></div></div>

  <div class="control-group"><%= f.label :password, class: "control-label" %>
  <div class="controls"><%= f.password_field :password %></div></div>

  <div class="control-group"><%= f.label :password_confirmation, class: "control-label" %>
  <div class="controls"><%= f.password_field :password_confirmation %></div></div>

  <div class="control-group"><%= f.submit "Sign up", class: "btn btn-primary" %></div>
<% end %>

