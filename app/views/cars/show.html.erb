<h2><%= @car.make %> <%= @car.model %></h2>
<% if current_user %>
<% if current_user.has_liked?(@car) %>
	<%= form_for @like, url: car_like_path(@car, @like), method: :delete do |f| %>
		<%= f.submit "Unlike" %>
	<% end %>
<% else %>
	<%= form_for @like, url: car_likes_path(@car) do |f| %>
		<%= f.submit "like" %>
	<% end %>
<% end %>
<% else %>
 <p>Please <%= link_to "sign in", new_user_session_path %> to like this car...</p>
<% end %>
<%= pluralize( @car.likes.count, 'person') %> likes this car!

<div class="car_images">
	<% @car.images.each do |image| %>
		<%= image_tag image.car_image.url(:thumb) %>
	<% end %>
</div>
  
<h3>Description</h3>
<div class="car_description">
  <%= @car.description %>
</p>

<h3>Details</h3>
<div class="car_details">
	<p><span class="label">Make:</span> <%= @car.make %></p>
	<p><span class="label">Model:</span> <%= @car.model %></p>
	<p><span class="label">Year:</span> year is comming soon... </p>
	<p><span class="label">Category:</span> <%= @car.car_category %></p>
	<p><span class="label">Body type:</span> <%= @car.body_type %></p>
	<p><span class="label">Advantages:</span> <%= @car.advantages %></p>
	<p><span class="label">Disadvantages:</span> <%= @car.disadvantages %></p>
 </div>

<hr />

<h3> Comments </h3>
 <% @car.comments.each do |comment| %>
 	<div style="border:solid black 1px">
		<p> Created at: <%= formatted_date comment.created_at %> </p>
		<p> <%= comment.body %> </p>
		<p><%= link_to "Edit Comment", edit_car_comment_path(comment) %> |
		<%= link_to "Delete Comment", car_comment_path(@car, comment), method: :delete, confirm: "Are you sure you want to delete this comment" %></p>
 	</div>
 <% end %>


 <%= form_for @comment, url: car_comments_path(@car) do |f| %>
  <%= f.text_area :body, rows: 1 %>
  <%= f.submit %>
<% end %>

<%= link_to 'Edit', edit_car_path(@car) %> |
