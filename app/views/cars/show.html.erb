
<%= render partial: 'car' %>
<%= render partial: 'comments/list_comments' %>

<h3> Comments </h3>
<%if current_user %>
 <%= form_for @comment, url: car_comments_path(@car), :html => { :class => "new_comment well form-search", :id => "new_comment" }  do |f| %>
  <%= f.text_area :body, rows: 1 %>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% if @is_current_user_admin %>    
 <%= link_to 'Back', cars_path, class: "btn btn-primary", :style=> "color: #FFFFFF" %>
<% end %>
